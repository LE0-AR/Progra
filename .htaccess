# Activar motor de reescritura
RewriteEngine On

# Definir la carpeta ra√≠z de tu proyecto
RewriteBase /DW/Biticarora/

# ----------------------------------------------------
# Regla 1: Redirigir acceso a carpetas sensibles
# ----------------------------------------------------
# Si el usuario intenta acceder directamente a /app/Controller o /app/Model,
# lo redirigimos al index.php dentro de nuestra base.
RewriteCond %{REQUEST_URI} app/Controller/ [OR]
RewriteCond %{REQUEST_URI} app/Model/
RewriteRule .* index.php [L]

# ----------------------------------------------------
# Regla 2: Controlador frontal (URLs amigables)
# ----------------------------------------------------
# Si el archivo o carpeta no existe, redirigimos internamente a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.php [L]
